<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.google.fhirengine.example">

    <application
        android:name=".FhirApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/title_activity_login">
        </activity>
        <activity
            android:name=".RegisterPatient"
            android:label="@string/title_register_patient">
        </activity>
        <activity
            android:name=".PatientListActivity"
            android:label="@string/title_patient_list"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PatientDetailActivity"
            android:label="@string/title_patient_detail"
            android:parentActivityName=".PatientListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.google.fhirengine.example.PatientListActivity" />
        </activity>
        <activity android:name=".CqlLoadActivity" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>